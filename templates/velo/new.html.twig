{% extends 'base.html.twig' %}

{% block title %}Saisir un vélo{% endblock %}

{% block body %}
    <div class="flex flex-col items-center pt-6 sm:pt-0 bg-gray-100">
        <nav class="p-3 rounded-b-lg">
            <div class="flex items-center justify-between">
                <a href="/velo/new" class="bg-[#209b85] hover:bg-[#50c7ac] text-white rounded-lg px-8 py-3 text-xl shadow transition-colors duration-200 mb-4 flex items-center justify-center w-full ">
                    <i class="bi bi-bicycle text-3xl mr-4 portrait:text-6xl"></i>
                    Saisir un vélo
                </a>
                <a href="#" class="bg-[#209b85] hover:bg-[#50c7ac] text-white rounded-lg px-3 py-3 text-xl shadow transition-colors duration-200 mb-4 flex items-center justify-center w-full ">
                    <i class="bi bi-card-checklist text-3xl mr-4 portrait:text-6xl"></i>
                </a>
                <a href="#" class="bg-[#209b85] hover:bg-[#50c7ac] text-white rounded-lg px-3 py-3 text-xl shadow transition-colors duration-200 mb-4 flex items-center justify-center w-full ">
                    <i class="bi bi-arrow-up-left-circle text-3xl mr-4 portrait:text-6xl"></i>
                </a>
                <a href="#" class="bg-[#209b85] hover:bg-[#50c7ac] text-white rounded-lg px-3 py-3 text-xl shadow transition-colors duration-200 mb-4 flex items-center justify-center w-full ">
                    <i class="bi bi-eyeglasses text-3xl mr-4 portrait:text-6xl"></i>
                </a>
            </div>
        </nav>

        <div class="w-full sm:max-w-md
mt-6 px-6 py-4 bg-white shadow-md overflow-hidden sm:rounded-lg">
            <h1 class="text-xl font-bold text-gray-900 mb-6">Saisir un vélo</h1>


            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            {% for field in form %}
                <div class="space-y-1">
                    {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'appearance-none block w-full bg-gray-50 text-gray-700 border rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500'}}) }}
                </div>
            {% endfor %}

            <div class="flex items-center justify-between">
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#209b85] hover:bg-[#50c7ac] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#50c7ac]">
                    Soumettre
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
