{% extends 'base.html.twig' %}

{% block title %}Saisir un vélo{% endblock %}

{% block body %}
    <style>
        .color-choice {
            width: 40px;
            height: 40px;
            border: 2px solid #000000; /* Default border color */
            border-radius: 4px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 0.2s ease-in-out, border-color 0.2s ease-in-out;
        }

        .color-choice:hover {
            transform: scale(1.1);
        }

        .color-choice input[type=checkbox] {
            display: none; /* Hides the actual checkbox */
        }

        .color-choice input[type=checkbox]:checked + span {
            color: rgba(255, 255, 255, 0); /* Optional: makes the color name visible when checked */
        }

        .color-choice input[type=checkbox]:checked + label {
            border-color: blue; /* Changes border to blue when selected */
            box-shadow: 0 0 0 2px blue; /* Adds a blue halo effect */
        }

    </style>


    <div class="min-h-screen bg-gray-100 flex flex-col justify-center">
        <div class="max-w-xl w-full mx-auto">
            <div class="bg-white p-6 border border-gray-300 rounded-lg shadow-lg">
                <h1 class="mb-3 text-2xl font-bold text-center text-gray-900">Saisir un vélo</h1>
                {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                <div class="grid grid-cols-2 gap-4 ">
                    {{ form_row(form.ref_recyclerie, {'attr': {'class': 'block border border-black  rounded w-full'}}) }}
                    <div>
                        <h1 class="text-center">Couleurs</h1>
                        <div class="grid grid-cols-5 gap-1">
                            {% for color in form.couleur %}
                                <label class="color-choice" style="background-color: {{ color.vars.value|lower }};">
                                    {{ form_widget(color, {'attr': {'class': 'screen-reader-only'}}) }}
                                </label>
                            {% endfor %}
                        </div>
                    </div>
                    {{ form_row(form.marque, {'attr': {'class': 'block border bg-white border-black rounded w-full'}}) }}
                    {{ form_row(form.numero_de_serie, {'attr': {'class': 'block border border-black rounded w-full'}}) }}
                    {{ form_row(form.etat, {'attr': {'class': 'block border border-black rounded w-full'}}) }}
                    {{ form_row(form.poids, {'attr': {'class': 'block border border-black rounded w-full'}}) }}
                    {{ form_row(form.taille_roues, {'attr': {'class': 'block bg-white border border-black rounded w-full'}}) }}
                    {{ form_row(form.taille_cadre, {'attr': {'class': 'block border bg-white border-black rounded w-full'}}) }}
                    {{ form_row(form.date_de_reception, {'attr': {'class': 'block border border-black rounded w-full'}}) }}
                    {{ form_row(form.emplacement, {'attr': {'class': 'block border border-black rounded w-full'}}) }}
                    {{ form_row(form.type, {'attr': {'class': 'block bg-white border border-black rounded w-full'}}) }}
                    {{ form_row(form.url_photo, {'attr': {'class': 'block border border-black rounded w-full'}}) }}
                    <div class="text-center border border-black rounded p-2">
                        <h4 class="border-b border-black font-bold" >Propriétaire</h4>
                        {{ form_row(form.proprietaire.telephone, {'attr': {'class': 'block border border-black rounded w-full'}}) }}
                        {{ form_row(form.proprietaire.email, {'attr': {'class': 'block border border-black rounded w-full'}}) }}
                        {{ form_row(form.proprietaire.nom_proprio, {'attr': {'class': 'block border border-black rounded w-full'}}) }}
                    </div>
                    {{ form_row(form.commentaire, {'attr': {'class': 'block border border-black rounded w-full'}}) }}
                </div>
                <button type="submit" class="mt-4 w-full bg-teal-500 flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:border-indigo-700 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">Soumettre</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const colorChoices = document.querySelectorAll('.color-choice');

            colorChoices.forEach(choice => {
                const checkbox = choice.querySelector('input[type=checkbox]');

                choice.addEventListener('click', function() {
                    checkbox.checked = !checkbox.checked; // Toggle checkbox
                    if (checkbox.checked) {
                        choice.style.borderColor = 'blue'; // Change border to blue
                        choice.style.boxShadow = '0 0 0 2px blue'; // Blue halo effect
                    } else {
                        choice.style.borderColor = '#000000'; // Revert to default
                        choice.style.boxShadow = 'none'; // Remove halo
                    }
                });
            });
        });
    </script>

{% endblock %}
