            position: absolute;
            bottom: 0;

        }


        /* Animation Slide-In */
        @keyframes slideIn {
            from {
                transform: translateX(100%); 
            }
            to {
                transform: translateX(0);
            }
        }

        /* Animation Slide-Out */
        @keyframes slideOut {
            from {
                transform: translateX(0);
            }
            to {
                transform: translateX(100%);
            }
        }

        /* Classe d'animation */
