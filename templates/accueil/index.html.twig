    <style>

        /* Animation Slide-In */
        @keyframes slideIn {
            from {
                transform: translateX(100%); 
            }
            to {
                transform: translateX(0);
            }
        }

        /* Animation Slide-Out */
        @keyframes slideOut {
            from {
                transform: translateX(0);
            }
            to {
                transform: translateX(100%);
            }
        }

        /* Classe d'animation */
        .slide-in {
            animation: slideIn 0.5s ease-out forwards;
        }

        .slide-out {
            animation: slideOut 0.5s ease-in forwards;
        }
        {# Disparition du texte d'introduction pour le responsive #}
        @media (min-width: 840px){
            #text-home{display:block;}
        }
        @media (max-width: 840px){
            #text-home{display:none;}

        }

        .modal-backdrop {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
        }

    </style>
    <script>

        function hideFlashMessage() {
            const flashMessage = document.getElementById('flash-message');
            if (flashMessage) {
                flashMessage.classList.remove('slide-in');
                flashMessage.classList.add('slide-out');

                setTimeout(() => {
                    flashMessage.remove();
                }, 500); 
            }
        }
        
        setTimeout(() => {
            hideFlashMessage();
        }, 5000);

         window.addEventListener('DOMContentLoaded', (event) => {
            // Récupérer l'URL de la page
            const urlParams = new URLSearchParams(window.location.search);

            // Vérifier si le paramètre modal=open est présent dans l'URL
            if (urlParams.get('modal') === 'open') {
                const modal = document.getElementById('modal-lieu');
                modal.classList.remove('hidden');  
            }
        });
    
        document.addEventListener("DOMContentLoaded", () => {
            const openModalButton = document.querySelector('[data-modal-toggle="modal-lieu"]');
            const closeModalButton = document.querySelector('[data-modal-hide="modal-lieu"]');
            const modal = document.getElementById("modal-lieu");

            // Ouvrir la modal
            openModalButton.addEventListener("click", () => {
                modal.classList.remove("hidden");
            });

            // Fermer la modal en cliquant sur le bouton de fermeture
            closeModalButton.addEventListener("click", () => {
                modal.classList.add("hidden");
            });

            // Fermer la modal en cliquant sur le fond (backdrop)
            modal.addEventListener("click", (event) => {
                if (event.target === modal) {
                    modal.classList.add("hidden");
                }
            });
        });

    </script>
