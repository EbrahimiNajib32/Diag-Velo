{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 flex items-center justify-center">
        <div class="container max-w-4xl mx-auto p-8 bg-white shadow-lg rounded-lg">
            <h1 class="text-2xl font-bold text-center text-gray-800 mb-8">Admin Dashboard</h1>
            <div class="grid grid-cols-2 gap-4">
                <div class="p-6 bg-blue-500 text-white rounded-lg shadow-md">
                    <h2 class="text-lg font-semibold">Utilisateurs.</h2>
                    <p class="text-sm">Ajouter , supprimer , modifier des utilisateurs.</p>
                    <a href="{{ path('utilisateur_new') }}" class="mt-4 inline-block bg-blue-700 hover:bg-blue-800 text-white py-2 px-4 rounded">
                        Ajouter un nouvel utilisateur
                    </a>
                </div>
                <!-- More panels can be added here for other functionalities -->
                <div class="p-6 bg-green-500 text-white rounded-lg shadow-md">
                    <h2 class="text-lg font-semibold">EXEMPLE</h2>
                    <p class="text-sm">Panel d'exemple.</p>
                    <a href="#" class="mt-4 inline-block bg-green-700 hover:bg-green-800 text-white py-2 px-4 rounded">
                        Lien exemple
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


