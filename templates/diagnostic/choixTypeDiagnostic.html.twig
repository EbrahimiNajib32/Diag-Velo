{# templates/diagnostic/choixTypeDiagnostic.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Choix du type de diagnostic{% endblock %}

{% block body %}
    <style>
        /* Animation Slide-In */
        @keyframes slideIn {
            from {
                transform: translateX(100%);
            }
            to {
                transform: translateX(0);
            }
        }

        /* Animation Slide-Out */
        @keyframes slideOut {
            from {
                transform: translateX(0);
            }
            to {
                transform: translateX(100%);
            }
        }

        /* Classe d'animation */
        .slide-in {
            animation: slideIn 0.5s ease-out forwards;
        }

        .slide-out {
            animation: slideOut 0.5s ease-in forwards;
        }
    </style>
    <body class="flex flex-col min-h-screen">
        <header class="flex relative w-full justify-between mb-2">
            <div id="headerLogoTissebands">
                <img src="{{ asset('images/EBNtrans.png') }}" alt="EBN Logo" class="size-40">
            </div>
            <div id="headerLogoCite">
                <img src="{{ asset('images/nouveau log 1.png') }}" alt="LCDRLR Logo">
            </div>
        </header>

        <main class="flex-1 p-4">
            {% for message in app.flashes('success') %}
                <div class="fixed top-5 right-0 z-50 bg-white border border-gray-200 rounded-lg shadow-lg p-4 flex items-center gap-3 slide-in" id="flash-message">
                    <div class="text-green-500">
                        <i class="bi bi-check-circle-fill text-green-500 text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm font-semibold text-gray-800">{{ message }}</p>
                    </div>
                    <button
                        type="button"
                        class="text-gray-400 hover:bg-gray-200 hover:text-gray-900 rounded-lg p-1.5 ml-auto inline-flex items-center"
                        onclick="hideFlashMessage()"
                    >
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
            {% endfor %}
            
            <div class="container mx-auto mb-4 px-4 sm:px-6 lg:px-8">
                <h1 class="text-xl sm:text-2xl font-bold text-black text-center">
                    <i class="fas fa-list mr-2"></i>Type de diagnostic
                </h1>
                <p class="text-sm sm:text-base text-gray-700 font-semibold text-center">
                    {{ lieu.nomType }} {{ lieu.nom }} à {{ lieu.ville }}
                </p>
            </div>

            <nav class="py-3 px-4 container mx-auto flex flex-col sm:flex-row justify-center sm:items-center space-y-2 sm:space-y-0 sm:space-x-4 mb-4">
                <ol class="breadcrumb flex flex-wrap items-center space-x-2 sm:space-x-4">
                    <li class="breadcrumb-item font-bold">
                        <a href="{{ path('app_accueil') }}" 
                        class="text-blue-500 hover:text-blue-600 font-bold flex items-center">
                            <i class="fas fa-home mr-2"></i>
                        </a>
                    </li>
                    <li><i class="fas fa-angle-right text-gray-400"></i></li>
                    <li class="breadcrumb-item text-black font-bold flex items-center">
                        <i class="fas fa-tasks mr-2"></i>Diagnostic
                    </li>
                    <li><i class="fas fa-angle-right text-gray-400"></i></li>
                    <li class="breadcrumb-item text-black text-lg font-bold flex items-center space-x-2">
                        . . .
                    </li>
                    <li><i class="fas fa-angle-right text-gray-400"></i></li>
                    <li class="breadcrumb-item font-bold">
                        <a href="/velo/all" 
                        class="text-blue-500 hover:text-blue-600 font-bold flex items-center hover:underline">
                            <i class="bi bi-search mr-2"></i> Créer/Sélectionner Vélo
                        </a>
                    </li>
                    <li><i class="fas fa-angle-right text-gray-400"></i></li>
                    <li class="breadcrumb-item text-black font-bold flex items-center">
                        <i class="fas fa-list mr-2"></i> Type de diagnostic
                    </li>
                </ol>
            </nav>

            <div class="max-w-lg mx-auto text-center">
                <h1 class="text-4xl font-bold mb-4">Choix du type de diagnostic</h1>
            </div>
            
            {# Création dynamique du tableau avec les types de diagnostics associés à ce lieu #}
            <div class="max-w-lg mx-auto text-center portrait:max-w-2xl">
                <ul>
                    {% for diagnostic in typesDiagnostic %}
                        <li>
                            <a href="{{ path('app_diagnostic_elements_by_type', {'id': diagnostic.id, 'veloId': app.request.query.get('id')}) }}"
                            class="bg-teal-500 hover:bg-green-400 text-white rounded-lg px-8 py-3 text-xl shadow transition-colors duration-200 mb-4 flex items-center justify-center w-full portrait:text-4xl">
                                <i class="bi bi-bicycle text-3xl mr-4 portrait:text-6xl"></i>
                                {{ diagnostic.nomType }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </main>

        <footer class="w-full">
            <div id="bottom-logo" class="flex justify-center items-center py-6">
                <img src="{{ asset('images/nouveau log 1.png') }}" alt="Logo de l'entreprise" >
            </div>
        </footer>
    </body>

    <script>
        function hideFlashMessage() {
            const flashMessage = document.getElementById('flash-message');
            if (flashMessage) {
                flashMessage.classList.remove('slide-in');
                flashMessage.classList.add('slide-out');

                setTimeout(() => {
                    flashMessage.remove();
                }, 500);
            }
        }

        setTimeout(() => {
            hideFlashMessage();
        }, 5000);
    </script>

{% endblock %}
