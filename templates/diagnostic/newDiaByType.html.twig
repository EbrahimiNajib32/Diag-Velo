{% extends 'base.html.twig' %}

{% block title %}
    Éléments de diagnostic pour {{ typeDiagnostic.nomType }}
{% endblock %}

{% block body %}
    <style>
        input[type=radio]:focus + label {
            background-color: rgb(20 184 166 );
            border-radius: 10px;
            padding: 5px;
            color: white;
        }

        input[type=radio]:checked + label::before {
            background-color: rgb(20 184 166 );
            border-radius: 10px;
            padding: 5px;
        }

        input[type=radio] + label {
            position: relative;
            cursor: pointer;
            display: inline-block;
            margin: 5px;
            border-radius: 10px;
            padding: 5px;
        }

        input[type=radio] {
            visibility: hidden;
        }

        input[type=radio]:checked + label,
        input[type=radio] + label.selected {
            background-color: rgb(20 184 166 );
            border-radius: 10px;
            padding: 5px;
            color: white;
        }

        .modal-backdrop {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
            height: 100%;
            z-index: 50;
        }

        @media screen and (max-width: 500px) {
            .logo-footer {
                display: block;
                position: relative;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                height: 20vh;
                margin-top: 100px;
            }
        }

        @media screen and (min-width: 501px) and (max-width: 900px) {
            .logo-footer {
                display: none;
            }
        }

        @media screen and (min-width: 901px) {
            .logo-footer {
                display: none;
            }
        }
    </style>

    <body class="flex flex-col min-h-screen">
        <header class="flex relative w-full justify-between mb-2">
            <div id="headerLogoTissebands">
                <img src="{{ asset('images/EBNtrans.png') }}" alt="EBN Logo" class="size-40">
            </div>
            <div id="headerLogoCite">
                <img src="{{ asset('images/nouveau log 1.png') }}" alt="LCDRLR Logo">
            </div>
        </header>

        <main class="flex-1 p-4">
            <!-- Modal de confirmation -->
            <div id="modal-erreur" role="dialog" aria-labelledby="modal-title" tabindex="-1" aria-hidden="true" class="fixed inset-0 z-50 flex items-center justify-center overflow-y-auto hidden">
                <div class="modal-backdrop fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity z-40" aria-hidden="true"></div>

                <div class="fixed inset-0 z-50 w-screen overflow-y-auto">
                    <div class="flex min-h-full items-center justify-center p-4 text-center sm:items-center sm:p-0">
                        <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">

                            <button type="button" id="closeModalButton" class="absolute top-0 right-0 text-gray-400 hover:bg-gray-200 hover:text-gray-900 rounded-lg p-1.5 inline-flex items-center" data-modal-hide="modal-erreur">
                                <i class="bi bi-x-lg"></i>
                            </button>

                            <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                                <div class="sm:flex sm:items-start">
                                    <div class="mx-auto flex size-12 shrink-0 items-center justify-center rounded-full bg-red-100 sm:mx-0 sm:size-10">
                                        <svg class="size-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
                                        </svg>
                                    </div>
                                    <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
                                        <h2 class="text-base font-bold text-red-600" id="modal-title">Attention</h2>

                                        <div class="mt-2">
                                            <p class="text-base text-gray-900" id="modal-message">Attention si vous effectuer cette action cela n'enregistrera pas le diagnostic que vous êtes entrain de compléter.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
                                <button id="cancelButton" type="button" class="inline-flex w-full justify-center rounded-md bg-gray-500 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-400 sm:ml-3 sm:w-auto cursor-pointer">
                                    Annuler
                                </button>
                                <button id="confirmButton" type="button" class="inline-flex w-full justify-center rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto cursor-pointer">
                                    Confirmer
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="container mx-auto mb-4 px-4 sm:px-6 lg:px-8">
                <h1 class="text-xl sm:text-2xl font-bold text-black text-center">
                    <i class="fas fa-edit mr-2"></i>Saisie du diagnostic
                </h1>
                <p class="text-sm sm:text-base text-gray-700 font-semibold text-center">
                    {{ lieu.nomType }} {{ lieu.nom }} à {{ lieu.ville }}
                </p>
            </div>

            <nav class="py-3 px-4 container mx-auto flex flex-col sm:flex-row justify-center sm:items-center space-y-2 sm:space-y-0 sm:space-x-4 mb-4">
                <ol class="breadcrumb flex flex-wrap items-center space-x-2 sm:space-x-4">
                    <li class="breadcrumb-item font-bold">
                        <a id="OpenModalAccueil" href="#" data-url="{{ path('app_accueil') }}"
                        class="text-blue-500 hover:text-blue-600 font-bold flex items-center">
                            <i class="fas fa-home mr-2"></i>
                        </a>
                    </li>
                    <li><i class="fas fa-angle-right text-gray-400"></i></li>
                    <li class="breadcrumb-item text-black font-bold flex items-center">
                        <i class="fas fa-tasks mr-2"></i>Diagnostic
                    </li>
                    <li><i class="fas fa-angle-right text-gray-400"></i></li>
                        <li class="breadcrumb-item text-black text-lg font-bold flex items-center space-x-2">
                            . . .
                    </li>
                    <li><i class="fas fa-angle-right text-gray-400"></i></li>
                    <li class="breadcrumb-item font-bold">
                        <a id="OpenModalSelection" href="#" data-url="{{ path('app_type_diagnostic', { 'id': velo.id }) }}"
                        class="text-blue-500 hover:text-blue-600 font-bold flex items-center hover:underline">
                            <i class="fas fa-list mr-2"></i>Type de diagnostic
                        </a>
                    </li>
                    <li><i class="fas fa-angle-right text-gray-400"></i></li>
                    <li class="breadcrumb-item text-black font-bold flex items-center">
                        <i class="fas fa-edit mr-2"></i>Saisie du diagnostic
                    </li>
                </ol>
            </nav>

            <div class="container shadow-2xl p-2 mt-3 mx-auto px-4 max-w-xl text-center">


                <h1 class="text-xl font-semibold text-gray-700 text-center portrait:text-3xl">Nouveau Diagnostic {{ typeDiagnostic.nomType }}</h1>
                {{ form_start(diagnosticForm, {'attr': {'class': 'space-y-3 portrait:space-y-6'}}) }}

                <div class="flex items-center justify-between mb-6 border text-sm portrait:text-2xl px-4 sm:px-6 md:px-8 lg:px-10">
                    <div>
                        {{ form_row(diagnosticForm.cout_reparation, {
                            'attr': {
                                'class': 'form-control mb-2 mt-4 h-6 w-16 p-2 border rounded border-black portrait:h-10 text-xs sm:text-sm md:text-base'
                            }
                        }) }}
                    </div>

                    <!-- Section Vélo sélectionné -->
                    <div class="mb-4">
                        <label for="velo-info" class="block text-gray-700 font-medium mb-2 text-xs sm:text-sm md:text-base lg:text-lg">Vélo sélectionné</label>
                        <div id="velo-info" class="text-gray-700">
                            {% if velo.refRecyclerie %}
                                <p class="font-semibold text-xs sm:text-sm md:text-base lg:text-lg">Référence : {{ velo.refRecyclerie }}</p>
                            {% endif %}
                            <p class="font-semibold text-xs sm:text-sm md:text-base lg:text-lg">N° Série : {{ velo.getNumeroDeSerie() }}</p>
                            <p class="text-gray-700 text-xs sm:text-sm md:text-base lg:text-lg">{{ velo.type }} - {{ velo.marque }}</p>
                        </div>
                    </div>
                </div>

                <div>{{ form_row(diagnosticForm.utilisateur, {'attr': {'class': 'form-control border mb-2 mt-4'}}) }}</div>

                {% for category, elements in diagnosticElements %}
                    <div class="mb-2 text-center">
                        <h2 onclick="toggleSection(event)" class="flex justify-between items-center text-lg font-semibold cursor-pointer rounded-xl text-white portrait:text-3xl category-header" aria-expanded="false">
                            <div class="flex-1 text-center">{{ category }}</div>
                            <i class="bi bi-chevron-down mr-1"></i>
                        </h2>
                        <div class="mt-2 bg-gray-100 p-2 rounded shadow hidden transition-all ease-in-out duration-300 portrait:text-2xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 category-section">
                            {% for element in elements %}
                                <div class="card bg-white rounded-lg shadow-lg overflow-hidden mb-2">
                                    <div class="">
                                        <div class="form-group mb-3">
                                            <div class="font-bold">
                                                {{ form_label(attribute(diagnosticForm, 'etat_' ~ element.id)) }}
                                            </div>
                                            <div class="flex justify-center items-center mt-2 space-x-2">
                                                {{ form_widget(attribute(diagnosticForm, 'etat_' ~ element.id), {'attr': {'id': 'etat_' ~ element.id, 'class': 'hidden-radio-button'}}) }}
                                                <label for="etat_{{ element.id }}" class="custom-radio-label">
                                                </label>
                                                {{ form_errors(attribute(diagnosticForm, 'etat_' ~ element.id)) }}
                                            </div>
                                        </div>
                                        <div class="form-group mb-3">
                                            {{ form_label(attribute(diagnosticForm, 'commentaire_' ~ element.id)) }}
                                            {{ form_widget(attribute(diagnosticForm, 'commentaire_' ~ element.id), {'attr': {'class': 'form-control w-full border border-gray-300 focus:border-blue-500 focus:ring-blue-500 rounded'}}) }}
                                            {{ form_errors(attribute(diagnosticForm, 'commentaire_' ~ element.id)) }}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
                <div class="mb-6 text-center">
                    {{ form_row(diagnosticForm.conclusion, {'label_attr': {'class': 'text-sm portrait:text-2xl'}, 'attr': {'class': 'space-x-4'}}) }}
                </div>

                <button type="submit" class="w-full mt-4 py-2 px-4 bg-teal-500 hover:bg-indigo-700 text-white font-medium rounded-md" id="submit-button" style="display: none;">Sauvegarder</button>
                {{ form_end(diagnosticForm) }}
            </div>
        </main>

        <footer class="w-full">
            <div id="bottom-logo" class="flex justify-center items-center py-6">
                <img src="{{ asset('images/nouveau log 1.png') }}" alt="Logo de l'entreprise" >
            </div>
        </footer>

    </body>
    <script>
            const modal = document.getElementById("modal-erreur");
            const openModalButtons = document.querySelectorAll('#OpenModalAccueil, #OpenModalSelection');
            const closeModalButton = document.getElementById('closeModalButton');
            const cancelButton = document.getElementById('cancelButton');
            const confirmButton = document.getElementById('confirmButton');
            let redirectUrl = '';

            // Ouvrir la modal
            openModalButtons.forEach(button => {
                button.addEventListener('click', (e) => {
                    e.preventDefault();
                    redirectUrl = button.getAttribute('data-url');
                    if(document.getElementById('submit-button').style.display === 'none'){
                        window.location.href = redirectUrl;
                    }else{
                        modal.classList.remove("hidden");
                        modal.classList.add("flex");
                    }


                });
            });

            // Fermer la modal (Annuler)
            cancelButton.addEventListener("click", () => {
                modal.classList.add("hidden");
                modal.classList.remove("flex");
            });

            // Fermer la modal
            closeModalButton.addEventListener("click", () => {
                modal.classList.add("hidden");
                modal.classList.remove("flex");
            });

            // Confirmer et rediriger vers l'URL spécifiée
            confirmButton.addEventListener("click", () => {
                window.location.href = redirectUrl;  // Redirige vers l'URL stockée
                modal.classList.add("hidden");
                modal.classList.remove("flex");
            });


        var btns = document.querySelectorAll('.btn-group .btn');

        // Ajouter un écouteur d'événement à chaque bouton
        btns.forEach(function(btn) {
            btn.addEventListener('click', function() {
                // Désélectionner tous les boutons
                btns.forEach(function(otherBtn) {
                    otherBtn.classList.remove('active');
                    otherBtn.querySelector('input').checked = false;
                });

                // Sélectionner le bouton cliqué
                btn.classList.add('active');
                btn.querySelector('input').checked = true;
            });
        });

        function toggleSection(event) {
            const currentHeader = event.currentTarget;
            const currentSection = currentHeader.nextElementSibling;
            const allSections = document.querySelectorAll('.category-section');

            allSections.forEach(section => {
                if (section !== currentSection && !section.classList.contains('hidden')) {
                    section.classList.add('hidden');
                    section.previousElementSibling.setAttribute('aria-expanded', 'false');
                }
            });

            const expanded = currentHeader.getAttribute('aria-expanded') === 'true';
            currentHeader.setAttribute('aria-expanded', !expanded);
            currentSection.classList.toggle('hidden');
        }

        function checkDiagnosticsFilled() {
            const allSections = document.querySelectorAll('.category-section');
            let diagnosticsFilled = false;

            allSections.forEach(section => {
                const radios = section.querySelectorAll('input[type=radio]');
                if (Array.from(radios).some(radio => radio.checked)) {
                    diagnosticsFilled = true;
                }
            });

            return diagnosticsFilled;
        }

        function updateCategoryBackground() {
            const diagnosticsFilled = checkDiagnosticsFilled();
            const submitButton = document.getElementById('submit-button');

            if (diagnosticsFilled) {
                submitButton.style.display = 'block';
            } else {
                submitButton.style.display = 'none';
            }

            document.querySelectorAll('.category-header').forEach(header => {
                const sections = header.nextElementSibling.querySelectorAll('.form-group');
                const total = sections.length;
                let filled = 0;

                sections.forEach(section => {
                    const radios = section.querySelectorAll('input[type=radio]');
                    if (Array.from(radios).some(radio => radio.checked)) {
                        filled++;
                    }
                });

                if (filled === 0) {
                    header.style.backgroundColor = '#ff0000'; // Red
                } else if (filled < total/2) {
                    header.style.backgroundColor = '#fbb100'; // Orange
                } else if (filled === total/2) {
                    header.style.backgroundColor = '#00ff48'; // Green
                }
            });
        }

        document.addEventListener('DOMContentLoaded', () => {
            const form = document.querySelector('form');
            const submitButton = document.getElementById('submit-button');
            const closeModalButton = document.getElementById('close-modal');

            updateCategoryBackground(); // Initial check on page load
            document.querySelectorAll('input[type=radio]').forEach(radio => {
                radio.addEventListener('change', updateCategoryBackground);
            });
        });

        document.addEventListener('DOMContentLoaded', () => {
            const radios = document.querySelectorAll('input[type=radio]');
            radios.forEach(radio => {
                const label = radio.nextElementSibling;
                radio.addEventListener('change', () => {
                    radios.forEach(r => {
                        r.nextElementSibling.classList.remove('selected');
                    });

                    label.classList.add('selected');
                });
            });
        });
    </script>
{% endblock %}
