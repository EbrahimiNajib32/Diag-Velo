{# templates/diagnostics/recapitulatif.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Récapitulatif des Diagnostics{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            margin-top: 50px;
        }
        h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5em;
            color: #333;
        }
        .table-responsive {
            margin: 0 auto;
            max-width: 90%;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        thead {
            background-color: #343a40;
            color: #fff;
        }
        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #dee2e6;
        }
        tbody tr:nth-child(odd) {
            background-color: #f8f9fa;
        }
        tbody tr:hover {
            background-color: #e9ecef;
        }

        @media screen and (max-width: 500px) {
            .logo-footer {
                display: block;
                position: relative;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                height: 50px;
                margin-top: 100px;
            }

            .table-container {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }

            .table {
                width: 100%;
            }
        }

        @media screen and (min-width: 501px) and (max-width: 900px) {
            .logo-footer {
                display: none;
            }

            .table-container {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }

            .table {
                width: 100%;
            }
        }

        @media screen and (min-width: 901px) {
            .logo-footer {
                display: none;
            }

            .table-container {
                overflow-x: scroll;
                -webkit-overflow-scrolling: touch;
            }

            .table {
                width: 100%;
            }
        }

        .reset-button {
            background-color: #38a89d;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .reset-button:hover {
            background-color: #60c6bc;
        }
    </style>
{% endblock %}

