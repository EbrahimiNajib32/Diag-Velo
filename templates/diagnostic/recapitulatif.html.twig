     <script>
         // Fonction pour mettre à jour le style
         function updateFilterStyles() {
             const filterButtons = document.querySelectorAll('.filter button');

             filterButtons.forEach(button => {
                 const attribute = button.getAttribute('data-value');
                 if (attribute && activeFilters[attribute]) {
                     button.parentElement.classList.add('filter-active');
                     button.classList.add('active');
                 } else {
                     button.parentElement.classList.remove('filter-active');
                     button.classList.remove('active');
                 }
             });
         }

         function toggleDropdown(dropdownId) {
            var dropdown = document.getElementById(dropdownId);
            dropdown.style.display = dropdown.style.display === "block" ? "none" : "block";
        }
        // filtres combinés
        let activeFilters = {}; // Objet pour stocker les filtres actifs


        function filterRows(attribute, value) {
            if (value === "") {
                delete activeFilters[attribute]; // Supprimez le filtre s'il est vide
            } else {
                activeFilters[attribute] = value; // Ajoutez ou mettez à jour le filtre
            }

            applyFilters(); // Appliquez tous les filtres actifs

            updateFilterStyles();

            // Fermez tous les menus déroulants
            document.querySelectorAll('.dropdown-content').forEach(dropdown => {
                dropdown.style.display = 'none';
            });
        }
        function applyFilters() {
            const rows = document.querySelectorAll("tbody tr");

            rows.forEach(row => {
                let isVisible = true;

                for (const [attribute, value] of Object.entries(activeFilters)) {
                    const attrValue = row.getAttribute('data-' + attribute);
                    if (attrValue !== value) {
                        isVisible = false; // Cachez la ligne si un filtre ne correspond pas
                        break;
                    }
                }

                row.style.display = isVisible ? "" : "none";
            });
        }

        // Fonction pour réinitialiser tous les filtres (grâce à un bouton magique)
         function resetFilters() {
             activeFilters = {};
             updateFilterStyles();
             const rows = document.querySelectorAll('table tbody tr');
             rows.forEach(row => {
                 row.style.display = '';
             });
         }


        function hover(element, isHovering) {
            if (isHovering) {
                element.style.backgroundColor = '#e0e0e0';
            } else {
                element.style.backgroundColor = '#f9f9f9';
            }
        }

        function filterByReference() {
            var input = document.getElementById("searchInput");
            var filter = input.value.toUpperCase();
            var table = document.querySelector("table");
            var tr = table.getElementsByTagName("tr");
            for (var i = 1; i < tr.length; i++) {
                var td = tr[i].getElementsByTagName("td")[2];
                if (td) {
                    var txtValue = td.textContent || td.innerText;
                    tr[i].style.display = txtValue.toUpperCase().indexOf(filter) > -1 ? "" : "none";
                }
            }
        }

        function filterBySerial() {
            var input = document.getElementById("searchSerial");
            var filter = input.value.toUpperCase();
            var table = document.querySelector("table");
            var tr = table.getElementsByTagName("tr");
            for (var i = 1; i < tr.length; i++) {
                var td = tr[i].getElementsByTagName("td")[1];
                if (td) {
                    var txtValue = td.textContent || td.innerText;
                    tr[i].style.display = txtValue.toUpperCase().indexOf(filter) > -1 ? "" : "none";
                }
            }
        }

        function filterByOwner() {
            var input = document.getElementById("searchOwner");
            var filter = input.value.toUpperCase();
            var table = document.querySelector("table");
            var tr = table.getElementsByTagName("tr");
            for (var i = 1; i < tr.length; i++) {
                var td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    var txtValue = td.textContent || td.innerText;
                    tr[i].style.display = txtValue.toUpperCase().indexOf(filter) > -1 ? "" : "none";
                }
            }
        }


        // Nouvelle fonction de filtrage global pour la barre de recherche principale

        function filterTable() {
            const input = document.getElementById("mainSearch").value.toUpperCase(); // Valeur de recherche principale
            const rows = document.querySelectorAll("tbody tr"); // Sélectionne toutes les lignes du tableau

            rows.forEach(row => {
                // Récupère les cellules correspondant à chaque champ
                const veloIdCell = row.querySelector("[data-velo-id]");
                const serialCell = row.querySelector("[data-serial]");
                const bicycodeCell = row.querySelector("[data-bicycode]");
                const referenceCell = row.querySelector("[data-reference]");

                // Récupère le texte des cellules (en majuscule pour une comparaison uniforme)
                const veloIdText = veloIdCell ? veloIdCell.textContent.trim().toUpperCase() : "";
                const serialText = serialCell ? serialCell.textContent.trim().toUpperCase() : "";
                const bicycodeText = bicycodeCell ? bicycodeCell.textContent.trim().toUpperCase() : "";
                const referenceText = referenceCell ? referenceCell.textContent.trim().toUpperCase() : "";

                // Comparaison avec la valeur de la recherche (si vide, ignore la recherche)
                let isMatch = false;

                // Filtrage de la barre de recherche : recherche dans les colonnes spécifiques uniquement
                if (input === "" ||
                    veloIdText.includes(input) ||
                    serialText.includes(input) ||
                    bicycodeText.includes(input) ||
                    referenceText.includes(input)
                ) {
                    isMatch = true; // Correspondance avec la recherche
                }

                // Filtrage avec les autres filtres (dropdowns)
                for (const [attribute, value] of Object.entries(activeFilters)) {
                    const cell = row.querySelector(`[data-${attribute}]`);
                    if (cell && cell.textContent.trim().toUpperCase() !== value.toUpperCase()) {
                        isMatch = false; // Si un filtre actif ne correspond pas, on cache la ligne
                        break;
                    }
                }

                // Affiche ou cache la ligne en fonction de la correspondance avec les filtres
                if (isMatch) {
                    row.style.display = ""; // Affiche la ligne
                } else {
                    row.style.display = "none"; // Cache la ligne
                }
            });
        }

        // Fonction pour gérer les filtres dropdown (exemple de gestion des filtres par attribut)
        function filterByDropdown(attribute, value) {
            if (value === "") {
                delete activeFilters[attribute]; // Supprime le filtre si la valeur est vide
            } else {
                activeFilters[attribute] = value; // Ajoute ou met à jour le filtre
            }

            filterTable(); // Applique les filtres (y compris la recherche)
        }

        // Ajouter un écouteur d'événements pour la barre de recherche
        document.getElementById("mainSearch").addEventListener("input", filterTable);



        document.addEventListener("DOMContentLoaded", () => {
            const openModalButtons = document.querySelectorAll('[data-modal-toggle]');
            const closeModalButtons = document.querySelectorAll('[data-modal-hide]');
            const modalBackdrops = document.querySelectorAll('.modal-backdrop');

            openModalButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const modalId = button.getAttribute('data-modal-toggle');
                    const modal = document.getElementById(modalId);
                    modal.classList.remove('hidden');
                });
            });

            closeModalButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const modalId = button.getAttribute('data-modal-hide');
                    const modal = document.getElementById(modalId);
                    modal.classList.add('hidden');
                });
            });

            modalBackdrops.forEach(backdrop => {
                backdrop.addEventListener('click', (event) => {
                    // Check if the clicked element is the backdrop itself
                    if (event.target === backdrop) {
                        const modalId = backdrop.getAttribute('id');
                        const modal = document.getElementById(modalId);
                        modal.classList.add('hidden');
                    }
                });
            });
        });
        document.addEventListener("click", (event) => {
            const clickedElement = event.target;
            const isBackdrop = clickedElement.classList.contains("modal-backdrop");
            if (isBackdrop) {
                const modalId = clickedElement.getAttribute("id");
                const modal = document.getElementById(modalId);
                modal.classList.add("hidden");
            }
        });
    </script>
